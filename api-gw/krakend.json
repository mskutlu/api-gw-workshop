{
  "port": 5001,
  "version": 2,
  "timeout": "3000ms",
  "cache_ttl": "30s",
  "host": [
      "http://fake_api:8080"
  ],
  "extra_config": {
      "github_com/devopsfaith/krakend-metrics": {
          "listen_address": ":5003"
      },
      "github_com/devopsfaith/krakend-gologging": {
          "level": "DEBUG",
          "prefix": "[API-GW]",
          "syslog": true,
          "stdout": true
      },
      "github_com/devopsfaith/krakend-opencensus": {
          "sample_rate": 100,
          "reporting_period": 1,
          "enabled_layers": {
              "backend": true,
              "router": true
          },
          "exporters": {
              "jaeger": {
                  "endpoint": "http://jaeger:14268",
                  "service_name": "krakend"
              },
              "prometheus": {
                  "port": 5002
              }
          }
      },
      "github_com/devopsfaith/krakend-cors": {
          "allow_origins": [
              "http://localhost:8080",
              "http://localhost:3000"
          ],
          "allow_methods": [
              "POST",
              "GET"
          ],
          "allow_headers": [
              "Origin",
              "Authorization",
              "Content-Type"
          ],
          "expose_headers": [
              "Content-Length"
          ],
          "max_age": "12h"
      },
      "github_com/devopsfaith/bloomfilter": {
          "N": 10000000,
          "P": 1e-7,
          "HashName": "optimal",
          "TTL": 1500,
          "port": 1234,
          "TokenKeys": [
              "jti"
          ]
      }
  },
  "endpoints": [
      {
          "endpoint": "/splash",
          "backend": [
              {
                  "url_pattern": "/shop/campaigns.json",
                  "whitelist": [
                      "campaigns"
                  ]
              },
              {
                  "url_pattern": "/shop/products.json",
                  "whitelist": [
                      "products"
                  ]
              }
          ]
      },
      {
        "endpoint": "/foo",
        "backend": [
            {
                "url_pattern": "/monolith/foo.json"
            }
        ],
        "extra_config": {
          "extra_config": {
              "github.com/devopsfaith/krakend-jose/validator": {
                  "alg": "RS256",
                  "audience": [
                      "https://ahankendi.auth0.com/api/v2/"
                  ],
                  "roles_key": "https://ahankendi.auth0.com/api/v2/roles",
                  "roles": [],
                  "jwk-url": "https://ahankendi.auth0.com/.well-known/jwks.json"
              }
          }
        }
    },
      {
          "endpoint": "/sequential",
          "backend": [
              {
                  "url_pattern": "/hotels/1.json",
                  "whitelist": [
                      "destination_id"
                  ]
              },
              {
                  "url_pattern": "/destinations/{resp0_destination_id}.json",
                  "extra_config": {
                    "github.com/devopsfaith/krakend-httpcache": {}
                  }
              }
          ],
          "extra_config": {
              "github.com/devopsfaith/krakend/proxy": {
                  "sequential": true
              }
          }
      },
      {
          "endpoint": "/fail",
          "backend": [
              {
                  "url_pattern": "/user/1.json",
                  "group": "user"
              },
              {
                  "host": [
                      "http://fake_url_that_should_not_resolve.tld"
                  ],
                  "url_pattern": "/",
                  "group": "none"
              }
          ],
          "extra_config": {}
      },
      {
          "endpoint": "/public",
          "backend": [
              {
                  "host": [
                      "https://api.github.com"
                  ],
                  "url_pattern": "/users/alperhankendi",
                  "whitelist": [
                      "avatar_url",
                      "name",
                      "company",
                      "blog",
                      "location",
                      "mail",
                      "hireable",
                      "followers",
                      "public_repos",
                      "public_gists"
                  ],
                  "mapping": {
                      "name": "FullName"
                  },
                  "group": "github",
                  "method": "GET"
              },
              {
                  "host": [
                      "https://api.github.com"
                  ],
                  "url_pattern": "/repos/alperhankendi/address-service",
                  "whitelist": [],
                  "mapping": {},
                  "group": "repo",
                  "extra_config": {
                    "github.com/devopsfaith/krakend/proxy": {
                      "flatmap_filter": [
                        {
                          "type": "del",
                          "args": [
                            "owner.avatar_url"
                          ]
                        },
                        {
                          "type": "move",
                          "args": [
                            "owner.subscriptions_url",
                            "s_url"
                          ]
                        }
                      ]
                    }
                  },
                  "method": "GET"
              }
          ]
      },
       {
          "endpoint": "/private/custom",
          "backend": [
              {
                  "url_pattern": "/user/1.json"
              }
          ],
          "extra_config": {
              "github.com/devopsfaith/krakend-jose/validator": {
                  "alg": "HS256",
                  "audience": [
                      "http://api.example.com"
                  ],
                  "roles_key": "roles",
                  "issuer": "https://krakend.io",
                  "roles": [
                      "role_a",
                      "role_c"
                  ],
                  "jwk-url": "http://fake_api:8080/jwk/symmetric.json",
                  "disable_jwk_security": true
              }
          }
      },
      {
          "endpoint": "/token",
          "backend": [
              {
                  "url_pattern": "/token.json"
              }
          ],
          "extra_config": {
              "github.com/devopsfaith/krakend-jose/signer": {
                  "alg": "HS256",
                  "kid": "sim2",
                  "keys-to-sign": [
                      "access_token",
                      "refresh_token"
                  ],
                  "jwk-url": "http://fake_api:8080/jwk/symmetric.json",
                  "disable_jwk_security": true
              }
          }
      },
      {
        "endpoint": "/notify",
        "method": "POST",
        "backend": [
          {
            "url_pattern": "/",
            "method": "POST",
            "disable_host_sanitize": true,
            "extra_config": {
              "github.com/devopsfaith/krakend-amqp/produce": {
                "exchange": "notify-exchange",
                "durable": true,
                "delete": false,
                "exclusive": false,
                "no_wait": true,
                "mandatory": true,
                "immediate": false,
                "name": "notifications"
              }
            },
            "host": [
              "amqp://guest:guest@rabbitmq:5672"
            ]
          }
        ]
      },
      {
        "endpoint": "/processCommand",
        "method": "POST",
        "extra_config": {
            "github.com/devopsfaith/krakend-jose/validator": {
                "alg": "HS256",
                "audience": [
                  "http://api.example.com"
                ],
                "roles_key": "roles",
                "issuer": "https://krakend.io",
                "roles": [
                  "role_a",
                  "role_c"
                ],
                "jwk-url": "http://fake_api:8080/jwk/symmetric.json",
                "disable_jwk_security": true
            }
        },
        "headers_to_pass": [
            "TrackId"
          ],
        "backend": [
          {
            "host": [
                "amqp://guest:guest@rabbitmq:5672"
            ],
            "disable_host_sanitize": true,            
            "method": "POST",
            "extra_config": {
              "github.com/devopsfaith/krakend-amqp/produce": {
                "name": "process",
                "exchange": "process-exchange",
                "durable": true,
                "delete": false,
                "exclusive": false,
                "no_wait": true,
                "mandatory": true,
                "immediate": false
              }
            }
          }
        ]
      },      
      {
        "endpoint": "/processResult",
        "method": "GET",
        "extra_config": {
            "github.com/devopsfaith/krakend-jose/validator": {
                "alg": "HS256",
                "audience": [
                  "http://api.example.com"
                ],
                "roles_key": "roles",
                "issuer": "https://krakend.io",
                "roles": [
                  "role_a",
                  "role_c"
                ],
                "jwk-url": "http://fake_api:8080/jwk/symmetric.json",
                "disable_jwk_security": true
            }
        },        
        "backend": [
          {
            "host": [
                "amqp://guest:guest@rabbitmq:5672"
            ],
            "disable_host_sanitize": true,            
            "method": "GET",
            "extra_config": {
              "github.com/devopsfaith/krakend-amqp/consume": {
                "name": "processed",
                "exchange": "processed-exchange",
                "durable":        true,
                "delete":         false,
                "exclusive":      false,
                "no_wait":        true,
                "no_local":       false,
                "prefetch_count": 10
              }
            }
          }
        ]
      }
  ]
}